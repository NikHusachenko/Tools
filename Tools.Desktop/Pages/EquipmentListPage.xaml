<Page x:Class="Tools.Desktop.Pages.EquipmentListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tools.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentListPage">

    <Grid>
        <DataGrid x:Name="equipmentDataGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Width="210" Header="Equipment Name"/>
                <DataGridTextColumn Width="150" Header="Equipment Brand"/>
                <DataGridTextColumn Width="210" Header="Equipment structure"/>
                <DataGridTextColumn Width="210" Header="Equipment subgroup"/>
                <DataGridTextColumn Width="225" Header="Equipment group"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
