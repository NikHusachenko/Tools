<Page x:Class="Tools.Desktop.Pages.EquipmentListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tools.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentListPage">

    <Grid>
        <ListView x:Name="equipmentListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="210">Название обор.</GridViewColumn>
                    <GridViewColumn Width="150">Марка обор.</GridViewColumn>
                    <GridViewColumn Width="240">Структур. подразд.</GridViewColumn>
                    <GridViewColumn Width="200">Подгруппа обор.</GridViewColumn>
                    <GridViewColumn Width="210">Группа обор.</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
