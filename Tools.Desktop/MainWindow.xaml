        xmlns:local="clr-namespace:Tools.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1400">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Оборудование" Height="25">
                <MenuItem Header="Картотека оборудования" Click="EquipmentMenuItem_Click"></MenuItem>
