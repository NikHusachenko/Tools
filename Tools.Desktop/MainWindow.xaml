<Window x:Class="Tools.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"  
        MaxHeight="768" 
        MaxWidth="1024"
        MinHeight="768" 
        MinWidth="1024">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem FontSize="15" Header="Equipment" Height="auto">
                <MenuItem Header="Equipments" Click="EquipmentMenuItem_Click"></MenuItem>
                <MenuItem Header="Add Equipment" Click="AddEquipmentMenuItem_Click" ></MenuItem>
                <Separator Height="0" BorderBrush="Black"/>
                <MenuItem Header="Survey schedule" Click="GraphicMenuItem_Click" ></MenuItem>
            </MenuItem>
        </Menu>
            
        <Frame Grid.Row="1" x:Name="pagesFrame" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
